<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#EDEBEB"
        android:id="@+id/iv_category_home"
        android:layout_width="220dp"
        android:layout_height="170dp" />

    <TextView
        android:id="@+id/tv_category_title_home"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="20dp"
        android:text="测试一下标题"
        android:textSize="14dp"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@id/iv_category_home"
        app:layout_constraintRight_toRightOf="@id/iv_category_home"
        app:layout_constraintTop_toBottomOf="@id/iv_category_home" />

    <TextView
        android:id="@+id/tv_category_price_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="12dp"
        android:text="测试一下价格"
        android:textColor="#FF0000"
        app:layout_constraintLeft_toLeftOf="@id/tv_category_title_home"
        app:layout_constraintRight_toRightOf="@id/tv_category_title_home"
        app:layout_constraintTop_toBottomOf="@id/tv_category_title_home" />
</androidx.constraintlayout.widget.ConstraintLayout>